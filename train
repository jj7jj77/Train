Public Class Train

    'PUT control box in Properties to false to take the X out when finalizing application

    Private Sub TrainTimer_Tick(sender As Object, e As EventArgs) Handles TrainTimer.Tick
        ' Move the graphic across the form. 
        Static XInteger As Integer = TrainPictureBox.Left = 0
        Static YInteger As Integer = TrainPictureBox.Top = 0
        Static WidthInteger As Integer = TrainPictureBox.Width = Me.Width
        Static HeightInteger As Integer = TrainPictureBox.Height = Me.Height

        ' Set new X coordinate.
        ' diagonal
        'XInteger += 2
        'YInteger += 5
        'If YInteger > Me.Width Then
        '    XInteger = 0
        '    YInteger = 0
        'End If

        YInteger = 5
        XInteger = 2
        If YInteger > Me.Width Then
            TrainPictureBox.Left += 1
            TrainPictureBox.Top += 1
        End If

        ' Move image.
        TrainPictureBox.SetBounds(XInteger, YInteger, WidthInteger, HeightInteger)
    End Sub

    Private Sub NextFormTimer_Tick(sender As Object, e As EventArgs)
        'NextFormTimer.Enabled = True    'starts timer
        Me.Hide()    'hides train form after child form shown
    End Sub

    Private Sub TrainPictureBox_Click(sender As Object, e As EventArgs) Handles TrainPictureBox.Click

    End Sub

    Private Sub Train_Activated(sender As Object, e As EventArgs) Handles MyBase.Activated
        TrainTimer.Enabled = True
    End Sub

    Private Sub Train_Load(sender As Object, e As EventArgs) Handles MyBase.Load

    End Sub
End Class
